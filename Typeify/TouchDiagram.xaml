<Page x:Class="Typeify.TouchDiagram" 
      Height="500" Width="850"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Typeify"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TouchDiagram" Background="#FF282828">

    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="minimalism-simple-simple-background-abstract-wallpaper-preview.jpg" Opacity="0.2"/>
        </Grid.Background>
        <Image Source="Resources\touch-typing-keyboard.png" Height="350" Width="700" Margin="61,48,79,82"/>
        <Label Content="This is how you should hold your hands over the keyboard" Margin="42,2,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Century Gothic" FontSize="26" Height="39" Width="740" HorizontalAlignment="Left"/>
        <Button Content="Back" HorizontalAlignment="Left" Height="23" Margin="28,421,0,0" VerticalAlignment="Top" Width="105" Click="BackButton_Click" Background="#FF343333" Foreground="White" BorderBrush="White" FontFamily="Century Gothic" FontSize="16" RenderTransformOrigin="0.837,0.247"/>
    </Grid>
