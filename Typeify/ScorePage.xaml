        <Label Name="lblHigh3" Content="0" HorizontalAlignment="Left" Margin="386,174,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" FontFamily="Century Gothic" FontSize="29" RenderTransformOrigin="0.159,0.674"/>
    </Grid>
</Page>
