        <Label Content="1)&#xD;&#xA;2)&#xD;&#xA;3)&#xD;&#xA;4)&#xD;&#xA;5)" HorizontalAlignment="Left" Height="194" Margin="334,104,0,0" VerticalAlignment="Top" Width="34" Foreground="White" FontFamily="Century Gothic" FontSize="29"/>
        <Label Name="lblHigh1" Content="0" HorizontalAlignment="Left" Margin="386,104,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" FontFamily="Century Gothic" FontSize="29"/>
